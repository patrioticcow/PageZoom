{
    "name": "PageZoom",
    "version": "0.1.2",
    "manifest_version": 2,
    "description": "Change page zoom",
    "icons": {
        "16": "images/icon-16.png",
        "19": "images/icon-19.png",
        "38": "images/icon-38.png",
        "128": "images/icon-128.png"
    },
    "default_locale": "en",
    "options_page": "options.html",
    "background": {
        "scripts": [
            "scripts/jquery.js",
            "scripts/jquery.zoomooz.min.js",
            "scripts/background.js"
        ]
    },
    "page_action": {
        "default_icon": {
            "16": "images/icon-16.png",
            "19": "images/icon-19.png",
            "38": "images/icon-38.png",
            "128": "images/icon-128.png"
        },
        "default_title": "PageZoom",
        "default_popup": "popup.html"
    },
    "web_accessible_resources": [
        "scripts/injected.js"
    ],
    "content_scripts": [
        {
            "matches": [
                "http://*/*",
                "https://*/*"
            ],
            "css": [
                "styles/main.css"
            ],
            "js": [
                "scripts/jquery.js",
                "scripts/jquery.zoomooz.min.js",
                "scripts/injected.js",
                "scripts/contentscript.js"
            ],

            "all_frames": false
        }
    ],
    "permissions": [
        "tabs",
        "history",
        "storage",
        "contextMenus",
        "management",
        "http://*/*",
        "https://*/*"
    ]
}
